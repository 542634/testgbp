{
  "name": "SmartConstructionWidgetsWeb",
  "packageName": "@SmartConstructionWidgetsWeb",
  "label": "智能建设控件库",
  "description": "智能建设控件库描述",
  "workspace": "workspace",
  "groups": [
    {
      "type": "prop",
      "name": "basic",
      "label": "基础",
      "visiableLabel": true
    },
    {
      "type": "prop",
      "name": "advanced",
      "label": "高级",
      "visiableLabel": true
    },
    {
      "type": "event",
      "name": "handler",
      "label": "事件",
      "visiableLabel": false
    }
  ],
  "widgets": {
    "layout": [],
    "basic": [
      {
        "name": "NewWidget",
        "exposePath": "./basic/NewWidget",
        "label": "新控件",
        "description": "这是一个新创建的控件，用于展示基本功能。",
        "icon": "iconfont gcbp-ide-biaoqian",
        "category": "basic",
        "props": [
          {
            "name": "title",
            "type": "string",
            "default": "新控件"
          },
          {
            "name": "description",
            "type": "string",
            "default": "这是一个新创建的控件，用于展示基本功能。"
          },
          {
            "name": "buttonText",
            "type": "string",
            "default": "点击我"
          }
        ]
      },
      {
        "name": "RealTimeData",
        "exposePath": "./basic/RealTimeData",
        "label": "实时数据控件",
        "description": "用于展示实时数据的控件。",
        "icon": "iconfont gcbp-ide-biaoqian",
        "category": "basic",
        "props": [
          {
            "name": "title",
            "type": "string",
            "default": "实时数据"
          },
          {
            "name": "data",
            "type": "array",
            "default": [
              { "label": "温度", "value": "25°C" },
              { "label": "湿度", "value": "60%" },
              { "label": "PM2.5", "value": "35 μg/m³" }
            ]
          }
        ]
      }
    ],
    "form": [],
    "chart": [],
    "action": [],
    "advanced": []
  }
}