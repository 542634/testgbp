{
  "name": "SmartConstructionWidgetsWeb",
  "packageName": "@SmartConstructionWidgetsWeb",
  "label": "智能建设控件库",
  "description": "智能建设控件库描述",
  "workspace": "workspace",
  "groups": [
    {
      "type": "prop",
      "name": "basic",
      "label": "基础",
      "visiableLabel": true
    },
    {
      "type": "prop",
      "name": "advanced",
      "label": "高级",
      "visiableLabel": true
    },
    {
      "type": "event",
      "name": "handler",
      "label": "事件",
      "visiableLabel": false
    }
