{
  "name": "WorkspaceSmartConstructionWidgetsWeb",
  "packageName": "@workspace/smart-construction-widgets-web",
  "label": "智慧工地Web端业务控件库",
  "description": "智慧工地Web端业务控件库，提供智慧工地相关的业务组件",
  "workspace": "workspace",
  "groups": [
    {
      "type": "prop",
      "name": "basic",
      "label": "基础",
      "visiableLabel": true
    },
    {
      "type": "prop",
      "name": "advanced",
      "label": "高级",
      "visiableLabel": true
    },
    {
      "type": "event",
      "name": "handler",
      "label": "事件",
      "visiableLabel": false
    }
  ],
  "widgets": {
    "layout": [],
    "basic": [],
    "form": [],
    "chart": [],
    "action": [
      {
        "name": "SmartModal",
        "label": "智慧工地弹窗",
        "description": "可配置标题、内容和背景颜色的弹窗组件",
        "exposePath": "./action/SmartModal",
        "icon": "el-icon-add",
        "category": "action",
        "matchCores": null,
        "matchViews": null,
        "props": [
          {
            "name": "title",
            "label": "标题",
            "type": "string",
            "defaultValue": "默认标题"
          },
          {
            "name": "content",
            "label": "内容",
            "type": "string",
            "defaultValue": "默认内容"
          },
          {
            "name": "maskColor",
            "label": "遮罩背景色",
            "type": "string",
            "defaultValue": "rgba(0, 0, 0, 0.5)"
          },
          {
            "name": "contentBgColor",
            "label": "内容背景色",
            "type": "string",
            "defaultValue": "#ffffff"
          }
        ]
      }
    ],
    "advanced": []
  }
}