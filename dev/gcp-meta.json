  "widgets": {
    "layout": [],
    "basic": [
      {
        "name": "RealTimeData",
        "exposePath": "./basic/RealTimeData",
        "label": "实时数据控件",
        "description": "以高德地图为背景，展示环境监测、能源消耗、施工晴雨表和项目预警信息。",
        "icon": "iconfont gcbp-ide-shishishuju",
        "category": "basic",
        "matchCores": null,
        "matchViews": null,
        "props": [
          {
            "name": "environmentData",
            "label": "环境监测数据",
            "type": "array",
            "default": [
              { "label": "PM2.5", "value": "35 μg/m³" },
              { "label": "温度", "value": "25°C" },
              { "label": "湿度", "value": "60%" }
            ]
          },
          {
            "name": "energyData",
            "label": "能源消耗数据",
            "type": "array",
            "default": [
              { "label": "电力消耗", "value": "120 kWh" },
              { "label": "水消耗", "value": "15 m³" },
              { "label": "燃气消耗", "value": "8 m³" }
            ]
          },
          {
            "name": "weatherData",
            "label": "施工晴雨表数据",
            "type": "array",
            "default": [
              { "label": "今日天气", "value": "晴" },
              { "label": "风速", "value": "5 km/h" },
              { "label": "降水概率", "value": "10%" }
            ]
          },
          {
            "name": "warningData",
            "label": "项目预警信息",
            "type": "array",
            "default": [
              { "label": "安全隐患", "value": "2条" },
              { "label": "进度延误", "value": "1项" },
              { "label": "质量问题", "value": "0项" }
            ]
          }
        ]
      }
    ],
    "form": [],
    "chart": [],
    "action": [],
    "advanced": []
  }
